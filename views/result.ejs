<%- include('partials/header'); %>
<div class="main">
   <div class="w-100 mb-5">
   
       <form action="/" method="post" class="container gap-2 align-items-center justify-content-between">
           <div class="row">
               <p class="col-12 text-center fs-2 fw-medium ">Weather Data</p>
           </div>
           <div class="row justify-content-center gap-3">
               <input type="text" name = "city" placeholder="City Name" class="col-sm-4 fs-6  py-2 text-center border border-none rounded-2" >
               <button type="submit" class="btn btn-primary col-sm-4 fs-6 px-3 shadow-sm ">Search</button>
           </div>
       </form>    
   </div>
   
   <div class="container  justify-content-center align-items-center  bg-body-secondary p-4 rounded-5 shadow">
       <div class="row justify-content-between gap-2 report">
         <p class="col-sm-4 m-auto text-center fs-6">Today's Report</p>
         <h5 class="col-sm-4 m-auto text-center"><%= city %><sup class="fs-6 fw-normal">&nbsp;<%= countryName %></sup> </h5>
       </div>
       <div class="row justify-content-center align-items-center">
           <div class="d-flex justify-content-center align-items-center flex-column gap-2">
               <img src="<%= icon %>" alt="icon"  height="70px" width="70px"/>
               <p><%= description %></p>
           </div>
       </div>
   
     <div class="d-flex flex-column justify-content-center align-items-center border-top border-dark-subtle pt-3">
       <p class=""><span>Temperature: </span><%= temp %><span>℃</span></p>
       <p><span>Feels Like: </span><%= feelsLike %><span>℃</span></p>
       <p><span>Humidity: </span><%= humidity %><span>℃</span></p>
     </div>
   </div>
  
  <%- include('partials/footer'); %>
</div> 
