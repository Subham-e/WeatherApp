<%- include('partials/header'); %>
<div class="position-absolute top-0 pt-5 w-75">

    <form action="/" method="post" class="d-flex gap-2 align-items-center justify-content-center">
        <p class="flex-fill  fs-2 fw-medium my-auto">Weather Data</p>
        <input type="text" name = "city" placeholder="City Name" class="w-25 py-2 text-center rounded-2" autofocus>
        <button type="submit" class="btn btn-primary btn-lg py-2 w-25">Search</button>
     </form>    
</div>
<div  class="main d-flex flex-column justify-content-center align-items-center w-75 bg-body-secondary p-4 rounded-5">
  <p class="mb-4 text-center fs-5 align-self-start">Today's Report</p>
  <h1 style="font-weight: 700" class="mb-4 text-center">
    <%= city %><sup class="fs-5 fw-normal">&nbsp;<%= countryName %></sup>
  </h1>
  <img src="<%= icon %>" alt="icon" class="text-center" height="100px" width="100px" />
  <p><%= description %></p>

  <div class="d-flex gap-5 border-top border-dark-subtle pt-3">
    <p><span>Temperature: </span><%= temp %><span>℃</span></p>
    <p><span>Feels Like: </span><%= feelsLike %><span>℃</span></p>
    <p><span>Humidity: </span><%= humidity %><span>℃</span></p>
  </div>
</div>
<%- include('partials/footer'); %>
